        </label>
      </fieldset>

      <fieldset class="form-fieldset ui-input __third">
        <%= f.file_field :cover %>
        <label>
          <span>Change Cover Image</span>
        </label>
      </fieldset>

      <fieldset style="margin-top:20px;" class="form-fieldset ui-input __third">
        <%= f.select :category_id , Category.all.collect { |c| [c.name, c.id]}, :prompt => "Select One" %>
        <label>
          <span> Add A Category </span>
        </label>
      </fieldset>
      </div>



        <div class="froala" >
          <h1>Make Your Story Engaging</h1>
          <%= f.text_area :body, id: 'result' %>
        </div>


      <div  class="form-footer">
        <%= f.button :submit , class: " btn ", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."} %>
      </div>
  <% end %>








