
<style>

  .name {
    transition: all 300ms ease-in-out;
  }
  .name:hover{
    background: #8e44ad !important;
  }


  .name:after {
    content: '';
    position: absolute;
    top: 110%;
    left: 0;
    right: 0;
    background: -webkit-linear-gradient(left, #27ae60 0%, #27ae60 20%, #8e44ad 20%, #8e44ad 40%, #3498db 40%, #3498db 60%, #e74c3c 60%, #e74c3c 80%, #f1c40f 80%, #f1c40f 100%);
    background: -moz-linear-gradient(left, #27ae60 0%, #27ae60 20%, #8e44ad 20%, #8e44ad 40%, #3498db 40%, #3498db 60%, #e74c3c 60%, #e74c3c 80%, #f1c40f 80%, #f1c40f 100%);
    height: 5px;
  }




  .pagination{
    width: 50%;
    margin: 0 auto;
    background:rgb(240,240,255);
    font-size:40px;
    width:100%;
    text-align: center;
    color:rgb(80,80,80) !important;
    font-weight:lighter !important;
    position: relative;
    margin-top: 5px;
    margin-left: 8px;
  }
  .current{
    font-style: normal;
    background:rgb(80,80,80);
    color:white;
  }

    .category-title{
      font-size:50px;
      text-align: center;
      margin-top:45px;
      background-size: cover;
      color:white;
      font-weight:bold !important;
      -webkit-animation:100s scroll infinite linear;
      -moz-animation:100s scroll infinite linear;
      -o-animation:100s scroll infinite linear;
      -ms-animation:100s scroll infinite linear;
      animation:100s scroll infinite linear;

    }


  @-webkit-keyframes scroll{
    100%{
      background-position:0px -3000px;
    }
  }

  @-moz-keyframes scroll{
    100%{
      background-position:0px -3000px;
    }
  }

  @-o-keyframes scroll{
    100%{
      background-position:0px -3000px;
    }
  }

  @-ms-keyframes scroll{
    100%{
      background-position:0px -3000px;
    }
  }

  @keyframes scroll{
    100%{
      background-position:0px -3000px;
    }
  }


</style>
<% if @stories.last.category.present? %>
<h1 class="category-title"><%= @stories.last.category.name %></h1>
    <% end %>
<div style="margin-top:60px;" id="columns">
  <% @stories.each do |story| %>
      <% if story.category.present? %>

      <% if story.ispublished %>
          <% if story.category.name == "Romance" %>
              <script>

                      $(".brand").css('background',"url(https://st.depositphotos.com/1341440/1362/v/950/depositphotos_13624912-stock-illustration-seamless-pattern-with-pink-and.jpg)");

                  $(".category-title").css('background',"url(https://st.depositphotos.com/1341440/1362/v/950/depositphotos_13624912-stock-illustration-seamless-pattern-with-pink-and.jpg)");
              </script>
          <% end %>
          <% if story.category.name == "Horror" %>
              <script>
                      $(".brand").css('background',"url(https://image.shutterstock.com/z/stock-vector-scary-fantasy-pattern-background-hair-and-eyes-blue-eyes-in-pink-hair-294640793.jpg)");
                  $(".category-title").css('background',"url(https://image.shutterstock.com/z/stock-vector-scary-fantasy-pattern-background-hair-and-eyes-blue-eyes-in-pink-hair-294640793.jpg)");
              </script>
          <% end %>
          <% if story.category.name == "Drama" %>
              <script>
                  $(".brand").css('background',"url(https://cdn.pixabay.com/photo/2014/03/04/19/51/dark-279694_1280.png)");
                  $(".category-title").css('background',"url(https://cdn.pixabay.com/photo/2014/03/04/19/51/dark-279694_1280.png)");
              </script>
          <% end %>
          <% if story.category.name == "Fantasy" %>
              <script>

                      $(".brand").css('background',"url(https://d1yn1kh78jj1rr.cloudfront.net/preview/vector-seamless-texture-with-abstract-flowers-endless-background-ethnic-sea_zknayTcu_S.jpg)");
                      $(".category-title").css('background',"url(https://d1yn1kh78jj1rr.cloudfront.net/preview/vector-seamless-texture-with-abstract-flowers-endless-background-ethnic-sea_zknayTcu_S.jpg)");
              </script>
          <% end %>
          <% if story.category.name == "Mystery" %>
              <script>

                      $(".brand").css('background',"url(https://previews.123rf.com/images/mihno/mihno1505/mihno150500047/40730251-Abstract-ink-background-Marble-style-White-black-ink-in-water-Stock-Photo.jpg)");
                      $(".category-title").css('background',"url(https://previews.123rf.com/images/mihno/mihno1505/mihno150500047/40730251-Abstract-ink-background-Marble-style-White-black-ink-in-water-Stock-Photo.jpg)");
              </script>
          <% end %>
          <% if story.category.name == "Thriller" %>
              <script>
                      $(".brand").css('background',"url(https://www.presentationmagazine.com/powerpoint-templates/9/8/98199434/free-color-powerpoint-template-for-presentations-_1.jpg)");
                      $(".category-title").css('background',"url(https://www.presentationmagazine.com/powerpoint-templates/9/8/98199434/free-color-powerpoint-template-for-presentations-_1.jpg)");
              </script>
          <% end %>
          <% if story.category.name == "Comedy" %>
              <script>
                  $(".brand").css('background',"url(https://st2.depositphotos.com/5817452/8470/v/950/depositphotos_84703236-stock-illustration-crowd-of-laughing-people-hand.jpg)");
                  $(".category-title").css({
                      'background':"url(https://st2.depositphotos.com/5817452/8470/v/950/depositphotos_84703236-stock-illustration-crowd-of-laughing-people-hand.jpg)",
                      'color' : 'red'
                  });
              </script>
          <% end %>
          <% if story.category.name == "SCI-FI" %>
              <script>
                  $(".brand").css('background',"url(http://www.jotdown.es/wp-content/uploads/2014/12/peq1.jpg)");
                  $(".category-title").css('background',"url(http://www.jotdown.es/wp-content/uploads/2014/12/peq1.jpg)");
              </script>
          <% end %>
          <a href = "/stories/<%= story.id %>/view" >
            <figure>
              <% if story.cover? %>
                  <img src="<%= story.cover.url(:medium) %>">
              <% else %>

                  <img src="http://www.peterfuda.com/wp-content/uploads/2014/11/Story-Image-e1415228963753.jpg">

              <% end %>
              <div class="overlay"></div>

              <a href = "/stories/<%= story.id %>"><h1 style="position: absolute;background:black;top:5px;left:20px; font-size:15px; word-break: break-all;color:white;"><% if story.ispublished %> <%= pluralize(story.impressionist_count(:filter=>:session_hash), "view") %> <% end %></h1></a>
              <h1 style="position: absolute;background:black;top:34px; font-size:25px;left:20px; word-break: break-all;color:white;"><%= truncate(story.title.titlecase ,length:25) %></h1>
              <a href ="/profile/<%= story.user.id %>"><h1 class="name" style="position: absolute;top:100px; font-size:20px;  left:20px; word-break: break-all;color:white;"><%= story.user.firstname.titlecase %></h1></a>
              <h1  style="position: absolute;top:100px; font-size:20px; font-style: italic;  left:100px; word-break: break-all;color:white;"><%=  story.category.name %></h1>


            </figure>
          </a>



      <% end %>

  <% end %>

      <% end %>

</div>



<%= will_paginate @stories %>
