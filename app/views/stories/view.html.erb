<style>
  body{
    font-family: "Helvetica Neue";
    font-weight: normal;
    overflow-x: hidden;
    background-size: 100% 100%;
  }

    .bg {
      width:100%;
      height:100%;
      position: fixed;
      top:0;
      left:0;
      <% if @story.image? %>
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 9%, rgba(0, 0, 0, 0.65) 100%), url(<%= @story.image.url(:large) %>) no-repeat center center;
      <% end %>

      background-size: 100% 100%;
    }


  @media only screen
  and (min-device-width: 320px)
  and (max-device-width: 480px)
  and (-webkit-min-device-pixel-ratio: 2) {
    body,html{
      cursor:pointer !important;
    }
  }



    .site-footer, .page-wrap:after {
    /* .push must be the same height as footer */
    height: 142px;
  }
  .site-footer {
  }

  video {
    position: fixed;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    z-index: -100;
    transform: translateX(-50%) translateY(-50%);
    background-size: cover;
    transition: 1s opacity;
  }

    nav{
      background:rgba(255,255,255,0.2) !important;
      border:none !important;
    }





</style>


<div class="bg">

</div>
<div class="video-bg">
  <% if @story.video? %>
      <video poster="https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/polina.jpg" id="bgvid" playsinline autoplay muted loop>
        <source src="<%= @story.video %>" type="video/mp4">
      </video>
  <% end %>
</div>
<div class = "scroller">
<% @messages.each_with_index do |message, i| %>
<div class="message-container">
<% if message.message1? %>
  <div style="margin-top:5px;"  class="animated from-them message1 texter<%= i %>">
    <p><span><strong><%= @story.texter %> : </strong></span><%= message.message1 %></p><br>
  </div>
<% end %>

<div class="clear"></div>

<% if message.message2? %>
<div  style="margin-top:5px;" class="animated from-me message2 texter<%= i %> reciever<%= i %> ">
  <p><span><strong><%= @story.reciever %> : </strong></span><%= message.message2 %></p><br>
</div>
<% end %>

</div>
<div class="clear"></div>


</section>
      </div>

<% end %>





<script>

  $(".message1").hide();
  $(".message2").hide();
  $(".upnextbtn").hide();

  console.log($(".message1-container").children());
  console.log($(".message2-container").children());
  var all = document.getElementsByClassName("from-them").length + document.getElementsByClassName("from-me").length;
  var i = 0;
  var scrolled=0;

  $(document).click(function(){
      $(".texter" + i).fadeIn("slow").addClass("fadeIn");
      $(".reciever" + i).fadeIn("slow").addClass("fadeIn");
      console.log(i);

      if(i >= all){
          $(".upnextbtn").fadeIn().addClass("bounceIn");
      }

      console.log($(".message-container").children().length);

      scrolled=scrolled+300;

      $("body").animate({
          scrollTop:  scrolled
      });

      i++;
  });

  $(".story-name").html("<%= @story.title %>");


  $(".texter0").css("margin-top","100px");
  $(".reciever0").css("margin-top","100px");







</script>

